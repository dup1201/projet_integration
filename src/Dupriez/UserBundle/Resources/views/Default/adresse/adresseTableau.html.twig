{% extends 'base.html.twig' %}

{% block body %}

    <div align="center">
        <h1>Adresse(s)</h1>
        <table class="list">
            <tr>
                <th>Num√©ro</th>
                <th>Boite</th>
                <th>Rue</th>
                <th>Code postal</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>Action</th>
