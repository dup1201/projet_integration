{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Liste des utilisateurs</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Pseudo</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for users in usersList %}
                <tr>
                    <td>{{ users.nom }}</td>
                    <td>{{ users.prenom }}</td>
                    <td>{{ users.username }}</td>
                    <td>{% for role in users.roles %}
                            {{ role }}<br>
                        {% endfor %}
                    </td>
                    <td><a class="black" href="{{ path ('userDetail', {"id":users.id}) }}">détail</a>
                        <a href="{{ path ('fos_user_profile_edit') }}"><span class="fas fa-edit black"></span></a>
                        <a href=""><span class="fas fa-trash black"></span></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}