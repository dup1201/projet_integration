{% extends 'base.html.twig' %}

{% block body %}
 <div class="container">

    <h1>Livres</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Image</th>
            <th>Prix</th>
            <th>Titre</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for livre in livreList %}
            <tr>
                <td><img alt="livres" src="{{ asset('uploads/images/' ~ livre.products.image) }}" height="200px" width="200px"></td>
                <td>{{ livre.products.prix }}€</td>
                <td>{{  livre.titre }}</td>
                <td><a href="">détail</a>
                    <a href="{{ path('editlivre', {"id":livre.id}) }}"><span class="glyphicon glyphicon-edit"></span> </a>
                    <a href="{{ path ('deletelivre', {"id":livre.id}) }}"><span class="glyphicon glyphicon-trash"></span> </a> </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 </div>
{% endblock %}