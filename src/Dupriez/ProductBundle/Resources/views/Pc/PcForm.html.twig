{% extends 'base.html.twig' %}


{% block body %}
    <div class="container">
    <h1>Ajout ou modification d'un pc</h1>

    {{ form_start(PcForm, {'attr': {'novalidate': 'novalidate'}}) }}

    {{ form_widget(PcForm) }}

    <button type="submit">Envoyer</button>

    {{ form_end(PcForm) }}
    </div>

    {% if app.session.flashBag.has('ajoute') %}
        <div class="alert alert-fail">
            {% for msg in app.session.flashBag.get('ajoute') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}